<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>E-commerce grid</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>E-commerce</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Products grid</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        {{#each products}}
        <div class="col-md-3">
            <div class="ibox">
                <div class="ibox-content product-box">

                    <div class="product-imitation" style="padding:0;">
                        <img style="width:100%; height:200px;" src="/api/product/images/{{image.url}}">
                    </div>
                    <div class="product-desc">
                        <span class="product-price">
                            $ {{price}}
                        </span>
                        <small class="text-muted">{{category.name}}</small>
                        <a href="#" class="product-name"> {{name}}</a>



                        <div class="small m-t-xs"
                            style="overflow:hidden; height:20px; text-overflow: ellipsis; white-space: nowrap;">
                            {{description}}
                        </div>
                        <div class="m-t text-righ">

                            <a href="/product_detail" class="btn btn-xs btn-outline btn-primary">Info <i
                                    class="fa fa-long-arrow-right"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>




</div>
<div class="footer">
    <div class="float-right">
        10GB of <strong>250GB</strong> Free.
    </div>
    <div>
        <strong>Copyright</strong> Example Company &copy; 2014-2018
    </div>
</div>

</div>
</div>
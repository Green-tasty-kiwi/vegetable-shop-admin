<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>E-commerce products detail</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>E-commerce</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Products detail</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    {{#each products}}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox product-detail">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="product-images" style="padding:0; height:280px;">

                                <div>
                                    <div class=" image-imitation" style="padding:0; height:280px;">
                                        <img style="width:100%; height:280px;" src="/api/product/images/{{image.url}}">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">

                            <h2 class="font-bold m-b-xs">
                                {{name}}
                            </h2>
                            <small>{{status}}</small>
                            <div class="m-t-md">
                                <h2 class="product-main-price">${{price}} <small class="text-muted">(Enabled quantity:
                                        {{quantity.kg}} kg) </small>
                                </h2>
                            </div>
                            <hr>
                            <h4>Product description</h4>
                            <div class="small text-muted">
                                {{description}}
                            </div>
                            <dl class="small m-t-md">
                                <dt>Meta-title:</dt>
                                <dd>{{meta_tag}}</dd>
                                <dt>Meta-description:</dt>
                                <dd>{{meta_description}}</dd>
                                <dt>Meta-keywords:</dt>
                                <dd>{{meta_keywords}}</dd>
                            </dl>
                            <hr>
                        </div>
                    </div>

                </div>
                <div class="ibox-footer">
                    <span class="float-right">
                        Created at: <i class="fa fa-clock-o"></i> {{createdAt}}
                    </span>
                    Category: {{category.name}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}



</div>
<div class="footer">
    <div class="float-right">
        10GB of <strong>250GB</strong> Free.
    </div>
    <div>
        <strong>Copyright</strong> Example Company &copy; 2014-2018
    </div>
</div>

</div>
</div>